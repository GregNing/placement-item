<%= turbo_frame_tag "campaigns" do %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <td>Campaign Name&nbsp;<%= sort_link(@q, :name, 'Sort', default_order: :desc) %></td>
        <td>Created Date</td>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
    <% campaigns.each do |campaign| %>
      <%= render campaign %>
    <% end %>
    </tbody>
  </table>
  <%= paginate campaigns %>
<% end %>
<p style="color: green"><%= notice %></p>
<div class="col-md-12">
<div class="group">
  <%= link_to "New campaign", new_campaign_path, class: "btn btn-primary pull-right" %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <td>Campaign Name</td>
      <td>Created Date </td>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody  id="campaigns">
    <% @campaigns.each do |campaign| %>
      <%= render campaign %>
  <% end %>
  </tbody>
</table>

<%= paginate @campaigns %>
</div>